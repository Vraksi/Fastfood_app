<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" navigatingTo="navigatingTo">
    <ActionBar title="Names List" icon=""></ActionBar>
    <StackLayout style="background-color:white">
        <StackLayout orientation="vertical">
        <Button text="TAP" tap="{{ numbersetter }}" class="-primary" />
        <Label text="{{ _number }}" class="h1 text-center"/>
        <TextField text="http://192.168.8.122:5000/api/Accessories/4"/>
        <Label text="Tap the button" class="h1 text-center" />
        <Button text="TAP" tap="{{ onTap }}" class="-primary" />
        <Label text="{{ message }}" class="h2 text-center" textWrap="true" />
            <Repeater items="{{ _ArrayOfAccessories }}">
                <Repeater.itemTemplate>
                    <StackLayout orientation="horizontal">
                        <Label text="{{ name }}" style="width:25%" />
                        <label text="{{ priceOfItem }}" style="width:25%"/>
                        <Label text=" {{ category }}" style="width:25%" />
                    </StackLayout>
                </Repeater.itemTemplate>
            </Repeater>
        </StackLayout>
    </StackLayout>
</Page>
